<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="py-3 px-3">
                    <h1 class="h1">Connectez-vous :</h1>
                    {% if last_username is defined %}
                        {% if hasError %}
                            <div class="alert alert-danger">
                                <p><strong>Une erreur est survenue, l'email/pseudo ou le mot de passe est invalide</strong></p>
                            </div>
                        {% endif %}
                    {% endif %}
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email ou Pseudo:</label>
                            <input type="text" name="_username" id="email" class="form-control" placeholder="Entrez votre mail ou votre pseudo" {% if last_username is defined %}value="{{last_username}}" {% endif %}required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe :</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>